{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./lib",
		"module": "commonjs",
		"declaration": true,
		"declarationDir": "./typings",
		"alwaysStrict": true,
		"importHelpers": true,
		"target": "esnext",
		"noImplicitAny": false,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"allowJs": true,
		"preserveConstEnums": true,
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts",
		"lib",
		"example"
	]
}